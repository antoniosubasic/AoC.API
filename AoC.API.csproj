<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>AoCAPI</PackageId>
    <Authors>Antonio Subašić</Authors>
    <Description>Access personal data and input files from Advent of Code</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>AoCAPI, Advent-of-Code-API</PackageTags>
    <RepositoryUrl>https://github.com/hckmtrx/AoC.API</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageVersion>1.0.4</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Include="docs\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
